{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-tests",
      "type": "shell",
      "command": "cd ${workspaceFolder}/build && make test_apply_delta",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": "cmake-configure"
    },
    {
      "label": "cmake-configure",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake .. -DCMAKE_BUILD_TYPE=Debug",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "run-all-tests",
      "type": "shell",
      "command": "${workspaceFolder}/build/test_apply_delta",
      "group": "test",
      "dependsOn": "build-tests",
      "problemMatcher": []
    },
    {
      "label": "run-specific-test",
      "type": "shell",
      "command": "${workspaceFolder}/build/test_apply_delta --gtest_filter=ApplyDeltaTest.SimpleAddInstruction",
      "group": "test",
      "dependsOn": "build-tests",
      "problemMatcher": []
    },
    {
      "label": "clean-build",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
